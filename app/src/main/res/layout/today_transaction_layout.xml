<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingStart="10dp"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:id="@+id/todayTransactionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available balance"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chartBtnToday"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:text="Report"/>



    <TextView
        android:textColor="@color/black"
        android:paddingStart="10dp"
        android:layout_below="@id/todayTransactionText"
        android:id="@+id/sumTextViewToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Total Sum"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/sumTextViewToday"
        android:id="@+id/recyclerViewToday"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>